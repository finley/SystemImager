tape_permissions() {
	local DEVNO="$1"

	case "$DEVNO" in
		#
		# You could set other permissions to specific tape device
		# numbers here. E.g. the following would override the default
		# for tape 1a32
		#
		# 1a32) OWNER=nobody.users PERMISSIONS="u=rw,go=";;

		*)    OWNER=root.root PERMISSIONS="ug=rw,o=";;
	esac

	return 0
}
